      {
        "type": "separator"
      },
      {
        "type": "box",
        "layout": "horizontal",
        "flex": 1,
        "contents": [
          {
            "type": "image",
            "url": "https://www.company_envImg.com/",
            "gravity": "bottom",
            "size": "xxl",
            "aspectRatio": "16:9",
            "aspectMode": "cover",
            "action": {
              "type": "uri",
              "uri": "https://www.company_url.com/"
            }
          }
        ]
