{
  "type": "bubble",
  "direction": "rtl",
  "header": {
    "type": "box",
    "layout": "horizontal",
    "flex": 1,
    "contents": [
      {
        "type": "text",
        "text": "104人力銀行",
        "size": "xs",
        "align": "center",
        "gravity": "top",
        "weight": "bold",
        "color": "#AAAAAA",
        "action": {
          "type": "uri",
          "uri": "https://www.104.com.tw/"
        }
      }
    ]
  },
  "hero": {
    "type": "image",
    "url": "https://www.company_icon.com/",
    "size": "full",
    "aspectRatio": "20:13",
    "aspectMode": "cover",
    "action": {
      "type": "uri",
      "label": "Action",
      "uri": "https://www.company_url.com/"
    }
  },
  "body": {
    "type": "box",
    "layout": "vertical",
    "spacing": "md",
    "contents": [
      {
        "type": "box",
